<widget
  xmlns:gap = "http://phonegap.com/ns/1.0"
  id="bf.scanner"
  version="0.1"
  xmlns="http://www.w3.org/ns/widgets">
  <name>Barcode Scanner UI5</name>
  <description>
    Barcode Scanning in UI5
  </description>
  <author email="jbm1991@gmail.com" href="http://jmurray.me">
    John Murray
  </author>
  <content src="index.html" />
  <access origin="*" />

  <!-- Camera Plugin , stopping geolocation currently -->
  <gap:plugin name="com.sharinglabs.cordova.plugin.cache" version="1.0.0" />

  <gap:plugin name="com.phonegap.plugins.barcodescanner"/>



  <gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance" overwrite="true"> <false/>
